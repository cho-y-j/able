# ─── ABLE Backend Configuration ───────────────────────────────
# Copy this file to .env and fill in your values.
# All values shown are defaults unless marked REQUIRED.

# ── App ──
APP_NAME=ABLE
DEBUG=false

# ── Database (TimescaleDB / PostgreSQL) ──
# For local development with docker-compose:
DATABASE_URL=postgresql+asyncpg://able:able_secret@localhost:15432/able
DATABASE_URL_SYNC=postgresql://able:able_secret@localhost:15432/able

# ── Redis ──
REDIS_URL=redis://localhost:16379/0

# ── Security ──
# REQUIRED: Generate with `python -c "import secrets; print(secrets.token_hex(32))"`
SECRET_KEY=change-me-to-a-random-secret-key
# REQUIRED: Generate with `python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"`
ENCRYPTION_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Email (SMTP) ──
# Leave SMTP_HOST empty to disable email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@able-trading.com
SMTP_USE_TLS=true

# ── CORS ──
# Comma-separated origins allowed to access the API
CORS_ORIGINS=["http://localhost:3000"]
